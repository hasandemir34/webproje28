@model stokprojesi1.Models.Material

@{ ViewData["Title"] = "Malzeme Düzenle"; }

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-warning">
            <h4 class="mb-0">✏️ Malzeme Düzenle</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="MaterialId" />
                
                <div class="mb-3">
                    <label class="form-label fw-bold">Kategori</label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                </div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="StockQuantity" class="form-label fw-bold"></label>
                        <input asp-for="StockQuantity" class="form-control" type="number" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Price" class="form-label fw-bold"></label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" />
                    </div>
                </div>

                <button type="submit" class="btn btn-warning w-100">Güncelle</button>
                <a asp-action="Index" class="btn btn-secondary w-100 mt-2">İptal</a>
            </form>
        </div>
    </div>
</div>